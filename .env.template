# Quantitative Trading System Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB (Optional - for unstructured data)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=trading_mongo
MONGO_USER=
MONGO_PASSWORD=

# ============================================
# DATA PROVIDER API KEYS
# ============================================

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=Z0WR10WWKFEH25JO
ALPHA_VANTAGE_ENDPOINT=https://www.alphavantage.co/query

# Yahoo Finance (usually no key required)
YAHOO_FINANCE_API_KEY=

# Polygon.io
POLYGON_API_KEY=your_polygon_api_key
POLYGON_ENDPOINT=https://api.polygon.io

# Quandl
QUANDL_API_KEY=your_quandl_api_key

# IEX Cloud
IEX_CLOUD_API_KEY=your_iex_cloud_key
IEX_CLOUD_ENDPOINT=https://cloud.iexapis.com

# Twelve Data
TWELVE_DATA_API_KEY=your_twelve_data_key

# ============================================
# BROKER CONFIGURATION
# ============================================

# Interactive Brokers
IB_ACCOUNT_ID=your_ib_account
IB_API_HOST=127.0.0.1
IB_API_PORT=7497  # 7497 for paper trading, 7496 for live
IB_CLIENT_ID=1

# Alpaca
ALPACA_API_KEY=your_alpaca_key
ALPACA_SECRET_KEY=your_alpaca_secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live

# TD Ameritrade
TD_AMERITRADE_API_KEY=your_td_key
TD_AMERITRADE_REFRESH_TOKEN=your_td_refresh_token
TD_AMERITRADE_ACCOUNT_ID=your_td_account

# OANDA (for Forex)
OANDA_API_KEY=your_oanda_key
OANDA_ACCOUNT_ID=your_oanda_account
OANDA_ENVIRONMENT=practice  # practice or live

# ============================================
# MONITORING AND ALERTS
# ============================================

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
ALERT_EMAIL=alerts@yourdomain.com

# Slack Integration
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#trading-alerts

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Discord Webhook
DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# ============================================
# LOGGING AND MONITORING SERVICES
# ============================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Datadog
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# Prometheus
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091

# Grafana
GRAFANA_API_KEY=your_grafana_api_key
GRAFANA_URL=http://localhost:3000

# ============================================
# MACHINE LEARNING PLATFORMS
# ============================================

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-trading-data-bucket

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCP_PROJECT_ID=your-gcp-project
GCS_BUCKET=your-gcs-bucket

# Azure
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER=trading-data

# MLflow Tracking
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=trading_strategies

# ============================================
# SECURITY AND ENCRYPTION
# ============================================

# Encryption Keys
ENCRYPTION_KEY=your_32_byte_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_key

# API Security
API_SECRET_KEY=your_api_secret_key
API_RATE_LIMIT=100  # requests per minute

# ============================================
# ENVIRONMENT SETTINGS
# ============================================

# Environment
ENVIRONMENT=development  # development, staging, production

# Debug Mode
DEBUG=true

# Trading Mode
TRADING_MODE=paper  # paper or live

# Timezone
TIMEZONE=UTC

# ============================================
# WEBHOOK ENDPOINTS (for receiving data)
# ============================================

WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_ENDPOINT=https://yourapp.com/webhooks

# ============================================
# ADDITIONAL SERVICES
# ============================================

# News and Sentiment APIs
NEWS_API_KEY=your_news_api_key
BENZINGA_API_KEY=your_benzinga_key
FINNHUB_API_KEY=your_finnhub_key

# Economic Data
FRED_API_KEY=your_fred_api_key

# Alternative Data
TWITTER_API_KEY=your_twitter_key
TWITTER_API_SECRET=your_twitter_secret
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_secret

# ============================================
# PERFORMANCE SETTINGS
# ============================================

# Worker Configuration
WORKER_THREADS=4
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Queue Settings
QUEUE_MAX_SIZE=10000
QUEUE_WORKERS=2
